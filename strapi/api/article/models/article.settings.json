{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "likes": {
      "type": "integer"
    },
    "publish_at": {
      "type": "date"
    },
    "category": {
      "type": "string"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "string",
      "private": false
    },
    "background_color": {
      "type": "enumeration",
      "enum": [
        "white",
        "gray",
        "blue",
        "bluemarine",
        "pink",
        "yellow",
        "orange"
      ],
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
